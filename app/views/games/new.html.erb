<h1>New Game</h1>

<div class="content">
  <h2>Your current score is: <%= @score %></h2>
<div class="letters">
  <% @letters.each do |letter| %>
  <div class="letter">
    <%= letter %>
  </div>
  <% end %>
</div>
<div class="input">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="input" class="form-control" placeholder="Please enter">
    <input type="submit" value="Play" class="btn btn-primary">
  </form>
</div>
</div>

